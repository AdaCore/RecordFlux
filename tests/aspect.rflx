package Test is

   type Date is
      record
         Day : Integer;
         Month : Month_Name;
         Year : Natural;
      end record
         with Type_Invariant => Month'Length >= 3;

   type Short_Date is new Date
      with Type_Invariant => Month'Length <= 3;

   type PDU_X is new PDU (Payload_Type => X)
      with Type_Invariant => X_Type = 42 and (Foo > 1 or Bar < 2) and Baz /= Foo;

end Test;
