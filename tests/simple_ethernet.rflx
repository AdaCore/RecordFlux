package Simple_Ethernet is

    type U48 is mod 2**48;

    type PDU is
        record
            Destination : U48;
            Source : U48;
            EtherType : U16;
            Payload : Payload_Type;
        end record
            with Type_Invariant => Payload'Length >= 46 and Payload'Length <= 1500 and EtherType <= 1500 and EtherType >= 1536;

end Simple_Ethernet;
