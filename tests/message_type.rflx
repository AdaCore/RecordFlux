package Test is

   type T is mod 256;

   type PDU is
      message
         Foo : T
            then Bar
               if Foo'Length = 1 and Foo <= 16#1E#,
            then Baz
               if Foo'Length = 1 and Foo > 16#1E#;
         Bar : T;
         Baz : T;
      end message;

   type Simple_PDU is
      message
         Bar : T;
         Baz : T;
      end message;

   type Empty_PDU is null message;

end Test;
