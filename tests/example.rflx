-- The example used in the Ratianal section of the Wiki

package Example is

   type Unsigned_Int16 is mod 2**16;
   type Unsigned_Int32 is mod 2**32;

   type Packet_Kind is (Msg_Error, Msg_Data);

   type Example is
      record
         Kind : Packet_Kind;
         case Kind is
            when Msg_Error =>
               Error : Unsigned_Int32;
            when Msg_Data =>
               Key   : Unsigned_Int16;
               Value : Unsigned_Int16;
         end case;
      end record;

end Example;
