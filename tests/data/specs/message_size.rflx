package Message_Size is

   type T is range 0 .. 2 ** 8 - 1 with Size => 8;

   type M is
      message
         A : T;
         B : Opaque
            with Size => A * 8
            then null
               if Message'Size = (A + 1) * 8
            then C
               if Message'Last = B'Last + 8;
         C : T;
      end message;

end Message_Size;
