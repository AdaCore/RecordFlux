package Message_In_Message is

   type Length is mod 2**16;

   type Length_Value is
      message
         Length : Length
            then Value
               with Size => 8 * Length;
         Value : Opaque;
      end message;

   type Derived_Length_Value is new Length_Value;

   type Message is
      message
         Foo : Length_Value;
         Bar : Derived_Length_Value;
      end message;

   type Derived_Message is new Message;

end Message_In_Message;
