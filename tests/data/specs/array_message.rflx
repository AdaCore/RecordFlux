package Array_Message is

   type Byte is mod 256;
   type Bytes is array of Byte;

   type Foo is
      message
         Byte : Byte;
      end message;

   type Bar is array of Foo;

   type Message is
      message
         Length : Byte
            then Bar
               with Size => Length * 8;
         Bar : Bar;
      end message;

   type Message_With_SDU is
      message
         Length : Byte
            then Bar
               with Size => Length * 8;
         Bar : Bar
            then Payload
               with Size => 8;
         Payload : Opaque;
      end message;

end Array_Message;
