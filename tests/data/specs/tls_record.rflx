package TLS_Record is

   type Content_Type is
      (Invalid            =>  0,
       Change_Cipher_Spec => 20,
       Alert              => 21,
       Handshake          => 22,
       Application_Data   => 23,
       Heartbeat          => 24)
   with Size => 8;

   type Protocol_Version is
      (TLS_1_0 => 16#0301#,
       TLS_1_1 => 16#0302#,
       TLS_1_2 => 16#0303#,
       TLS_1_3 => 16#0304#)
   with Size => 16;

   type Length is range 0 .. 2 ** 14 + 256 with Size => 16;

   type TLS_Record is
      message
         Tag : Content_Type;
         Legacy_Record_Version : Protocol_Version;
         Length : Length
            then Fragment
               with Size => Length * 8
               if Tag /= Application_Data and Length <= 2 ** 14
            then Encrypted_Record
               with Size => Length * 8
               if Tag = Application_Data and Legacy_Record_Version = TLS_1_2;
         Fragment : Opaque
            then null;
         Encrypted_Record : Opaque;
      end message;

end TLS_Record;
