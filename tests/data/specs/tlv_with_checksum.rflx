package TLV_With_Checksum is

   type Tag is (MSG_DATA => 1, MSG_ERROR => 3) with Size => 2;
   type Length is mod 2**14;
   type Checksum is mod 2**32;

   type Message is
      message
         Tag      : Tag
            then Length
               if Tag = MSG_DATA
            then null
               if Tag = MSG_ERROR;
         Length   : Length
            then Value
               with Size => Length * 8;
         Value    : Opaque;
         Checksum : Checksum
            then null
               if Checksum'Valid_Checksum;
       end message
          with Checksum => (Checksum => (Tag, Value'Size, Value));

end TLV_With_Checksum;
