package Ethernet is

   type U48 is mod 2**48;

   type PDU is abstract
      record
         Destination : U48;
         Source : U48;
         EtherType : U16;
         Payload : Payload_Type;
      end record
         with Type_Invariant => Payload'Length >= 46 and Payload'Length <= 1500;

   type IEEE_802_3 is new PDU
      with Type_Invariant => EtherType <= 1500 and Payload'Length = EtherType;

   type Version_2 is new PDU
      with Type_Invariant => EtherType >= 1536;

end Ethernet;
