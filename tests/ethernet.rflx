package Ethernet is

   type UINT16 is range 0 .. 2**16 - 1 with Size => 16;
   type UINT48 is mod 2**48;

   type PDU is
      message
         Destination : UINT48;
         Source : UINT48;
         TPID : UINT16
            then TCI
               if TPID = 16#8100#,
            then EtherType
               with First = TPID'First
               if TPID /= 16#8100#;
         TCI : UINT16;
         EtherType : UINT16
            then Payload
               with Length = EtherType * 8
               if EtherType <= 1500,
            then Payload
               with Length = Buffer'Last - EtherType'Last
               if EtherType >= 1536;
         Payload : Payload_Array
            then null
               if Payload'Length >= 46 and Payload'Length <= 1500;
      end message;

end Ethernet;
