with Universal;

package Test is

   generic
      I : Channel with Readable; -- §S-P-C-RW
      O : Channel with Writable; -- §S-P-C-RW
   session Session is
      Message : Universal::Message; -- §S-D-V-T-M, §S-D-V-E-N
   begin
      state Start is
      begin
         I'Read (Message); -- §S-S-A-RD-V
      transition
         goto Reply
            if Message'Has_Data -- §S-S-T-HDAT, §S-E-AT-HD-V
         goto null -- §S-S-T-N
      exception
         goto null -- §S-S-E
      end Start;

      state Reply is
      begin
         O'Write (Message); -- §S-S-A-WR-V
      transition
         goto Start -- §S-S-T-N
      end Reply;
   end Session;

end Test;
