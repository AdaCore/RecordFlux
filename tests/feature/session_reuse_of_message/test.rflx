with Universal;

package Test is

   generic
      Channel : Channel with Readable, Writable; -- §S-P-C-RW
   session Session is
      Message : Universal::Message; -- §S-D-V-T-M, §S-D-V-E-N
   begin
      state Start is
      begin
         Channel'Read (Message); -- §S-S-A-RD-V
      transition
         goto Reply
            if Message'Has_Data -- §S-S-T-HDAT, §S-E-AT-V-HDAT
         goto null -- §S-S-T-N
      exception
         goto null -- §S-S-E
      end Start;

      state Reply is
      begin
         Channel'Write (Message); -- §S-S-A-WR-V
      transition
         goto Start
      end Reply;
   end Session;

end Test;
