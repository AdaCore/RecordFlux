package UDP is

   type Port is mod 2**16;
   type Length is range 8 .. 2**16 - 1 with Size => 16;
   type Checksum is mod 2**16;

   type Datagram is
      message
         Source_Port : Port;
         Destination_Port : Port;
         Length : Length;
         Checksum : Checksum
            then Payload
               with Length => (Length - 8) * 8;
         Payload : Payload;
      end message;

end UDP;
