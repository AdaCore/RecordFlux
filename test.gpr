with "aunit";

project Test is
   type Flag_Type is ("yes", "no");
   AUnit : Flag_Type := external ("aunit", "yes");
   Optimization : Flag_Type := external ("optimization", "no");

   case AUnit is
      when "yes" =>
         for Source_Dirs use ("generated", "tests");
         for Main use ("test.adb");
      when "no" =>
         for Source_Dirs use ("generated");
   end case;

   for Object_Dir use "build";
   for Create_Missing_Dirs use "True";

   package Prove is
      for Proof_Switches ("Ada") use (
         "-j0",
         "--prover=z3,cvc4",
         "--steps=8000",
         "--memlimit=1000",
         "--checks-as-errors",
         "--warnings=error",
         "--no-axiom-guard"  --  WORKAROUND: Componolit/Workarounds#5
      );

      --  Improving proof time
      for Proof_Switches ("rflx-lemmas.ads") use ("--steps=380");
      for Proof_Switches ("rflx-lemmas.adb") use ("--steps=380");
      case AUnit is
         when "yes" =>
            for Proof_Switches ("rflx-types-tests.adb") use ("--steps=380");
      end case;
   end Prove;

   package Builder is
      case Optimization is
         when "yes" =>
            for Default_Switches ("Ada") use ("-O3");
         when "no" =>
            for Default_Switches ("Ada") use ("-g", "-gnata");
      end case;
   end Builder;

   package Compiler is
      --  WORKAROUND: Componolit/Workarounds#9
      for Switches ("rflx-lemmas.ads") use ("-gnato13");
      for Switches ("rflx-lemmas.adb") use ("-gnato13");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

end Test;
