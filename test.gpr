with "aunit";
with "switches";

project Test is
   type Flag_Type is ("yes", "no");
   AUnit : Flag_Type := external ("aunit", "yes");
   Optimization : Flag_Type := external ("optimization", "no");

   case AUnit is
      when "yes" =>
         for Source_Dirs use ("generated", "tests");
         for Main use ("test.adb");
      when "no" =>
         for Source_Dirs use ("generated");
   end case;

   for Object_Dir use "build";
   for Create_Missing_Dirs use "True";

   package Prove is
      for Proof_Switches ("Ada") use (
         "-j0",
         "--prover=z3,cvc4,altergo",
         "--steps=1000",
         "--timeout=60",
         "--memlimit=1000",
         "--checks-as-errors",
         "--warnings=error",
         "--proof-warnings",
         "--no-axiom-guard"
      );

      --  Improving proof time
      for Proof_Switches ("rflx-ethernet-frame.ads") use ("--steps=25000");
      for Proof_Switches ("rflx-ipv4-option.ads") use ("--steps=2000");
      for Proof_Switches ("rflx-ipv4-packet.ads") use ("--steps=14000");
      for Proof_Switches ("rflx-rflx_types.ads") use ("--steps=80000", "--prover=altergo,cvc4,z3");
      for Proof_Switches ("rflx-rflx_utils.adb") use ("--steps=30000");
      for Proof_Switches ("rflx-rflx_utils.ads") use ("--steps=30000");
      for Proof_Switches ("rflx-udp-datagram.ads") use ("--steps=4000");

      case AUnit is
         when "yes" =>
            for Proof_Switches ("rflx-arrays-tests.adb") use ("--steps=4000");
            for Proof_Switches ("rflx-builtin_types_tests.adb") use ("--steps=4000");
            for Proof_Switches ("rflx-custom_types_tests.adb") use ("--steps=80000", "--prover=altergo,cvc4,z3");
            for Proof_Switches ("rflx-derivation-tests.adb") use ("--steps=4000");
            for Proof_Switches ("rflx-ethernet-tests.adb") use ("--steps=4000");
            for Proof_Switches ("rflx-in_ethernet-tests.adb") use ("--steps=117000");
            for Proof_Switches ("rflx-in_ipv4-tests.adb") use ("--steps=149000");
            for Proof_Switches ("rflx-ipv4-tests.adb") use ("--steps=79000");
      end case;
   end Prove;

   package Builder is
      for Switches ("Ada") use ("-j0");
      case Optimization is
         when "yes" =>
            for Default_Switches ("Ada") use ("-O3");
         when "no" =>
            for Default_Switches ("Ada") use Switches.Compiler_Switches;
      end case;
   end Builder;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

end Test;
