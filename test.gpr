with "aunit";

project Test is

    for Source_Dirs use ("src", "tests");
    for Object_Dir use "build";
    for Create_Missing_Dirs use "True";
    for Main use ("test.adb");

    package Prove  is
        for Switches use
        (
            "-j0",              -- Use all cores
            "--level=4",        -- Many provers, longer timeout
            "--warnings=error", -- Treat warnings as errors
            "-U"                -- Analyze all files
        );
    end Prove;

end Test;
